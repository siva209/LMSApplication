	@Override
	public ResponseDTO getAllHiredcandidatesStatus() {
		List<Status> isUserPresent = statusrepo.findAll();
		return new ResponseDTO("List of all Status : ", isUserPresent);
	}
	

	@Override
	public Response updateCandidateStatus(Long id, Status dto) {
		Optional<Status> isUserPresent = statusrepo.findById(dto.getId());
		if (isUserPresent.isPresent()) {
			isUserPresent.get().setCreatedUser(dto.getCreatedUser());
			isUserPresent.get().setCurrentStatus(lmsstatus.getCurrentStatus());
			isUserPresent.get().setKeyText(lmsstatus.getKeyText());
			isUserPresent.get().setKeyType(lmsstatus.getKeyType());
			isUserPresent.get().setKeyValue(lmsstatus.getKeyValue());
			isUserPresent.get().setLastUpdatedUser(lmsstatus.getLastUpdatedUser());
			isUserPresent.get().setSequenceNumber(lmsstatus.getSequenceNumber());
			System.out.println(isUserPresent);
			lmsStatusRepository.save(isUserPresent.get());
			return new ResponseDto("Status Data Successfully Updated", isUserPresent);
		} else {
			throw new LMSExceptions(400, "Status Data not Updated");
		}
	}
	}

