package com.bridgelabz.lms.controller;

import org.springframework.beans.factory.annotation.Autowired;

import com.bridgelabz.lms.service.IStatusService;

import io.swagger.models.Response;

public class StatusController {
	@Autowired(required = true)
	private IStatusService lmsStatusService;
	
	
	@PostMapping("/addstatus/")
	public ResponseEntity<ResponseDTO> addstatus(@RequestBody StatusDTO lmsstatus)
			throws LMSExceptions {
		Response respDTO = lmsStatusService.addStatusDetail(lmsstatus);
		return new ResponseEntity<ResponseDto>(respDTO, HttpStatus.OK);
	}
	
}